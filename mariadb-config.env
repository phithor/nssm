# NSSM Environment Configuration for MariaDB

# Database Configuration - MariaDB/MySQL
MYSQL_DB=nssm_db
MYSQL_USER=nssm_user
MYSQL_PASSWORD=your_secure_password_here
MYSQL_HOST=mariadb
MYSQL_PORT=3306
DATABASE_URL=mysql+pymysql://nssm_user:your_secure_password_here@mariadb:3306/nssm_db

# Alternative for host-based MariaDB:
# DATABASE_URL=mysql+pymysql://nssm_user:your_secure_password_here@localhost:3306/nssm_db

