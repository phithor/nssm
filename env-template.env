# NSSM Environment Configuration for External MariaDB
# Copy this to .env and update with your MariaDB credentials

# Database Configuration - Update with your MariaDB details
DATABASE_URL=mysql+pymysql://nssm_user:your_password@mariadb:3306/nssm_db

# Service Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO

# Service-Specific Configuration
SCRAPER_INTERVAL_MINUTES=60
NLP_BATCH_SIZE=100
ANALYTICS_HOURS_BACK=24
ANALYTICS_WINDOW_MINUTES=5
ANALYTICS_MIN_CONFIDENCE=0.5
MARKET_BACKFILL_DAYS=7

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
